<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.dawb.passerelle.ui.editors.EdnaActorMultiPageEditor"
            default="false"
            icon="icons/xml_substitute.gif"
            id="org.dawb.passerelle.editors.ednaEditor"
            name="Edna Editor">
      </editor>
      <editor
            class="org.dawb.passerelle.ui.editors.UserInputEditor"
            default="false"
            icon="icons/application_form_magnify.png"
            id="org.dawb.passerelle.editors.UserModifyEditor"
            name="Review">
      </editor>
      <editor
            class="org.dawb.passerelle.ui.editors.SubstitutionEditor"
            default="true"
            extensions="mac"
            icon="icons/xml_substitute.png"
            id="org.dawb.passerelle.editors.substitutionEditor"
            name="Substitution Editor">
         <contentTypeBinding
               contentTypeId="org.dawb.passerelle.actors.macContent">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="mac"
            id="org.dawb.passerelle.actors.macContent"
            name="Spec Macro"
            priority="high">
         <property
               default="UTF-8"
               name="org.eclipse.core.runtime.charset">
         </property>
         <describer
               class="org.dawb.passerelle.ui.editors.SubstitutionDescriber">
         </describer>
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="com.isencia.passerelle.workbench.model.editor.ui.workflow.category"
            class="org.dawb.passerelle.ui.views.ActorDebugView"
            icon="icons/debug_purple.gif"
            id="org.dawb.passerelle.views.actorDebugView"
            name="Debug Actor"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.services">
         
         <serviceFactory
            factoryClass="org.dawb.passerelle.ui.editors.UserInputService">
         <service
               serviceClass="org.dawb.common.services.IUserInputService">
         </service>
      </serviceFactory>
   </extension>
</plugin>
